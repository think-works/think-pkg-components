{
  "name": "@think/components",
  "version": "2.4.2",
  "description": "基础组件库",
  "type": "module",
  "main": "./dist/components.cjs",
  "module": "./dist/components.js",
  "types": "./dist/components.d.ts",
  "exports": {
    ".": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.js",
      "require": "./dist/components.cjs"
    },
    "./dist/*": "./dist/*"
  },
  "sideEffects": [
    "**/*.css",
    "**/*.less"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "serve": "vite",
    "build": "tsc && vite build && npm run build:types && npm run build:assets",
    "build:types": "tsc --outDir dist --noEmit false --composite false --tsBuildInfoFile null --declaration --emitDeclarationOnly && tsc-alias --outDir dist",
    "build:assets": "rm -rf dist/main.d.ts dist/Demo && cp src/styles/basic.less dist/basic-utils.less",
    "build:watch": "vite build --watch",
    "prepare": "husky",
    "version": "npm install && npm run build && git add .",
    "postversion": "git push --follow-tags --set-upstream origin $(git branch --show-current)",
    "release": "npm version ${npm_package_version%%-*} --allow-same-version && npm publish",
    "release:major": "npm version major && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:patch": "npm version patch && npm publish",
    "release:alpha": "npm version prerelease --preid alpha && npm publish --tag alpha",
    "release:beta": "npm version prerelease --preid beta && npm publish --tag beta",
    "release:rc": "npm version prerelease --preid rc && npm publish --tag rc"
  },
  "publishConfig": {
    "registry": "http://117.50.180.240:8081/repository/npm-hosted/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/think-works/think-pkg-components.git"
  },
  "overrides": {
    "ahooks": {
      "react": "$react"
    }
  },
  "peerDependencies": {
    "@ant-design/icons": "5.x",
    "antd": "5.x",
    "axios": "1.x",
    "classnames": "2.x",
    "dayjs": "1.x",
    "lodash-es": "4.x",
    "react": "18.x-19.x",
    "react-dom": "18.x-19.x",
    "react-router": "6.x-7.x",
    "react-router-dom": "6.x-7.x"
  },
  "devDependencies": {
    "@ant-design/icons": "^5.6.1",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@eslint/js": "^9.22.0",
    "@svgr/rollup": "^8.1.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "ahooks": "^3.8.4",
    "antd": "^5.24.3",
    "axios": "^1.8.2",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "less": "^4.2.2",
    "lint-staged": "^15.4.3",
    "lodash-es": "^4.17.21",
    "postcss-preset-env": "^10.1.5",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.3.0",
    "react-router-dom": "^7.3.0",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.1",
    "vite-plugin-checker": "^0.9.0",
    "vite-plugin-mock-dev-server": "^1.8.4"
  }
}
