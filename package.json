{
  "name": "@think/components",
  "version": "2.2.17",
  "description": "基础组件库",
  "type": "module",
  "main": "./dist/components.cjs",
  "module": "./dist/components.js",
  "types": "./dist/components.d.ts",
  "exports": {
    ".": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.js",
      "require": "./dist/components.cjs"
    },
    "./dist/*": "./dist/*"
  },
  "sideEffects": [
    "**/*.css",
    "**/*.less"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "serve": "vite",
    "build": "tsc && vite build && npm run build:types && npm run build:assets",
    "build:types": "tsc --outDir dist --noEmit false --composite false --tsBuildInfoFile null --declaration --emitDeclarationOnly && tsc-alias --outDir dist",
    "build:assets": "rm -rf dist/main.d.ts dist/Demo && cp src/styles/basic.less dist/basic-utils.less",
    "build:watch": "vite build -w",
    "prepare": "husky",
    "version": "npm install --force && npm run build && git add .",
    "postversion": "git push && git push --tags",
    "release": "npm version ${npm_package_version%%-*} --allow-same-version && npm publish",
    "release:major": "npm version major && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:patch": "npm version patch && npm publish",
    "release:alpha": "npm version prerelease --preid alpha && npm publish --tag alpha",
    "release:beta": "npm version prerelease --preid beta && npm publish --tag beta",
    "release:rc": "npm version prerelease --preid rc && npm publish --tag rc"
  },
  "publishConfig": {
    "registry": "http://117.50.180.240:8081/repository/npm-hosted/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/think-works/think-pkg-components.git"
  },
  "peerDependencies": {
    "@ant-design/icons": "5.x",
    "antd": "5.x",
    "axios": "1.x",
    "classnames": "2.x",
    "dayjs": "1.x",
    "lodash-es": "4.x",
    "react": "18.x-19.x",
    "react-dom": "18.x-19.x",
    "react-router": "6.x-7.x",
    "react-router-dom": "6.x-7.x"
  },
  "devDependencies": {
    "@ant-design/icons": "^5.5.2",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@eslint/js": "^9.17.0",
    "@svgr/rollup": "^8.1.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "ahooks": "^3.8.4",
    "antd": "^5.22.5",
    "axios": "^1.7.9",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "less": "^4.2.1",
    "lint-staged": "^15.2.11",
    "lodash-es": "^4.17.21",
    "postcss-preset-env": "^10.1.2",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.0.2",
    "react-router-dom": "^7.0.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.0.3",
    "vite-plugin-checker": "^0.8.0",
    "vite-plugin-mock-dev-server": "^1.8.3"
  }
}
